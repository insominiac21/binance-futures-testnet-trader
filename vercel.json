{
  "version": 2,
  "builds": [
    {
      "src": "web/**",
      "use": "@vercel/static"
    },
    {
      "src": "run_local_dashboard.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/run_local_dashboard.py"
    },
    {
      "src": "/(.*\\.(js|css|html|png|jpg|svg|ico))",
      "dest": "/web/$1"
    },
    {
      "src": "/",
      "dest": "/web/index.html"
    }
  ],
  "env": {
    "BINANCE_BASE_URL": "https://testnet.binancefuture.com"
  }
}
