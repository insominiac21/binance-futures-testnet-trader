/* web/styles.css - Vibrant Teal Trading Dashboard */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Teal/Emerald Color Palette */
    --primary: #0d9488;
    --primary-dark: #0f766e;
    --primary-light: #14b8a6;
    --accent: #f59e0b;
    --success: #10b981;
    --danger: #ef4444;
    --warning: #f59e0b;
    
    /* Backgrounds */
    --bg-main: #f0fdfa;
    --bg-card: #ffffff;
    --bg-input: #f0fdfa;
    
    /* Text */
    --text-primary: #134e4a;
    --text-secondary: #115e59;
    --text-muted: #5eead4;
    
    /* Borders */
    --border: #99f6e4;
    --border-foc40px;
    margin: 0 auto;
}

header {
    background: var(--bg-card);
    padding: 36px;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    text-align: center;
    margin-bottom: 36px;
    border: 2px solid var(--border);
}

header h1 {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-primary);
}

.subtitle {
    color: var(--warning);
    font-weight: 600;
    font-size: 15px;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.base-url {
    background: var(--bg-input);
