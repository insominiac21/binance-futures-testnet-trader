    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    margin-bottom: 36px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    color: white;
    border: 2px solid var(--primary-dark);
}

.info-item {
    display: flex;
    align-items: start;
    gap: 12px;
}

.info-item .emoji {
    font-size: 28px;
    flex-shrink: 0;
}

.info-item strong {
    display: block;
    margin-bottom: 6px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.info-item p {
    font-size: 13px;
    opacity: 0.95;
    margin: 0;
    line-height: 1.5;
}

.info-item input {
    margin-top: 10px;
    width: 100%;
    padding: 12px 16px;
    border: 2px solid rgba(255,255,255,0.3);
    border-radius: var(--radius-sm);
    background: rgba(255,255,255,0.15);
    color: white;
    font-size: 14px;
    transition: all 0.25s ease;
}

.info-item input:focus {
    outline: none;
    border-color: white;
    background: rgba(255,255,255,0.25);
}

.info-item input::placeholder {
    color: rgba(255,255,255,0.7);
}

@media (max-width: 768px) {
    .info-banner {
        grid-template-columns: 1fr;
    }
    
    .container {
        padding: 16px 14px;
    }
    
    .card {
        padding: 24px 18px
    .info-banner {
        grid-template-columns: 1fr;
    }
}

.info-text {
    color: var(--text-secondary);
    margin-bottom: 10px;
    font-size: 0.9rem;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--text-primary);
}

.form-group input,
.form-group select {
    width: 100%;
    padding: 12px;
    border: 2px solid var(--border-color);
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s;
}

.form-group input:focus,
.form-group select:focus {
    outline: none;
    border-color: var(--primary-color);
}

.form-group input[type="password"] {
    font-family: 'Courier New', monospace;
}

.checkbox-group label {
    display: flex;
    align-items: center;
    cursor: pointer;
}

.checkbox-group input[type="checkbox"] {
    width: auto;
    margin-right: 10px;
    cursor: pointer;
}

small {
    display: block;
    color: var(--text-secondary);
    font-size: 0.85rem;
    margin-top: 5px;
}

.btn {
    padding: 12px 30px;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    width: 100%;
}

.btn-primary {
    background: var(--primary-color);
    color: white;
}

.btn-primary:hover {
    background: #2563eb;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(59, 130, 246, 0.3);
}

.btn-success {
    background: var(--success-color);
    color: white;
}

.btn-success:hover {
    background: #059669;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(16, 185, 129, 0.3);
}

.btn:disabled {
    background: var(--text-secondary);
    cursor: not-allowed;
    transform: none;
}

.result-box {
    background: #f9fafb;
    padding: 20px;
    border-radius: 8px;
    margin-top: 15px;
    border-left: 4px solid var(--primary-color);
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
    line-height: 1.6;
    white-space: pre-wrap;
    word-break: break-word;
}

.result-box.success {
    background: #ecfdf5;
    border-left-color: var(--success-color);
    color: #065f46;
}

.result-box.error {
    background: #fef2f2;
    border-left-color: var(--danger-color);
    color: #991b1b;
}

.result-box.warning {
    background: #fffbeb;
    border-left-color: var(--warning-color);
    color: #92400e;
}

.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

.spinner {
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-overlay p {
    color: white;
    margin-top: 20px;
    font-size: 1.2rem;
}

footer {
    text-align: center;
    padding: 30px 20px;
    color: white;
    margin-top: 30px;
}

footer p {
    margin: 5px 0;
}

/* Responsive Design */
@media (max-width: 600px) {
    header h1 {
        font-size: 1.5rem;
    }

    .card {
        padding: 20px;
    }

    .btn {
        padding: 10px 20px;
    }
}
